{# Resources/views/layout.html.twig #}
{% if (form is defined) %}
    {% form_theme form "bootstrap_3_layout.html.twig" %}
{% endif %}
<!DOCTYPE html>
<html>
    <head>
        {% include "@Bootstrap/layout/style.html.twig" %}
        <meta content="text/html; charset=utf8" http-equiv="Content-Type" />
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        {% block bootstrapHeadStyles %}
        {% endblock %}
        <title>{% block bootstrapHeadTitle %}{% endblock %}</title>
    </head>
    <body{% block bootstrapBodyClasses %}{% endblock %}>
        {% block bootstrapBodyContent %}
        {% endblock %}
        {% include "@Bootstrap/layout/script.html.twig" %}
        {% block bootstrapBodyScripts %}
        {% endblock %}
    </body>
</html>
